<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<page>
  <display-name>Default</display-name>
  <description>Default page template that can be used on most pages</description>

  <form>
    <input name="navbarTitle" type="TextLine">
      <label i18n="default.navbarTitle">Navbar Title</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <input name="navbarColorScheme" type="RadioButton">
      <label i18n="default.navbarColorScheme">Navbar color scheme</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="light">Light</option>
        <option value="dark">Dark</option>
        <option value="blue">Blue</option>
      </config>
      <default>light</default>
    </input>
  </form>

  <regions>
    <region name="header"/>
    <region name="main"/>
    <region name="footer"/>
  </regions>
</page>
